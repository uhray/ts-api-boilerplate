{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2015",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./.build/",
    "sourceMap": true,
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
